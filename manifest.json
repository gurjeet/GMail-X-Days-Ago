{
  "manifest_version": 2,
  "author": "gurjeet@singh.im",
  "name": "GMail X Days Ago",
  "version": "1.0",
  "description": "Show emails from some days ago",
  "homepage_url": "https://q.ht/gmail-x-days-ago",
  "icons": {
    "32": "icons/calendar-email-32.png"
  },

  "permissions": [
    "https://mail.google.com/*",
    "tabs"
  ],

  "page_action": {
    "default_title": "GMail X Days Ago",
    "default_popup": "index.html",
    "show_matches": ["https://mail.google.com/*"],
    "default_icon": {
      "32":  "icons/calendar-email-32.png",
      "16":  "icons/calendar-email-16.png"
    }
  },

  "background": {
    "scripts": ["background.js"]
  }

}
